{
    "manifest_version": 3,
    "name": "Site Manager",
    "version": "1.0",
    "description": "Quickly switch between local, staging, and live versions of a site.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "permissions": ["storage"]
  }
  